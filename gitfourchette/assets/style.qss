Sidebar {
    background: palette(window);
}

Banner.diff, ContextHeader {
    padding: 2px;
}

Banner.merge {
    padding: 8px;
    background-color: #ffbb00;
}
Banner.merge QLabel { color: black; }

Banner[heeded="true"] { background-color: #3d9970; }
Banner[heeded="true"] QLabel { color: white; }

SearchBar[red="true"] QLineEdit { color: red; }

Banner.diff QToolButton, ContextHeader QToolButton { text-decoration: underline; }

/* Don't move dark override to style-dark.qss because DiffView can be dark independently from Qt theme */
DiffView[dark="false"] { selection-background-color: rgba(0, 0, 0, 20%); selection-color: black; }
DiffView[dark="true"] { selection-background-color: rgba(255, 255, 255, 26%); }

QFaintSeparator { border: none; background: rgba(0, 0, 0, 15%); }
